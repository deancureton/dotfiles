#!/bin/zsh

# =============================================================================
# Dotfiles Management Script
# =============================================================================

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

# =============================================================================
# Helper Functions
# =============================================================================

sub_help() {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   help               This help message"
  echo "   stow [folder]      Stow config folder"
  echo "   edit               Open dotfiles in editor ($EDITOR)"
  echo "   clean              Clean up caches (brew, pip)"
  echo "   update             Update packages and pkg managers (OS, brew, npm, gem, pip)"
  echo "   dump               Dump current Homebrew packages to Brewfile"
  echo "   macos              Apply macOS system defaults"
  echo "   dock               Apply OS X Dock settings"
  echo "   start              Start services"
  echo "   fix                Fix services"
}

sub_stow() {
  stow --dir=$DOTFILES_DIR/config --target=$HOME --verbose=1 --ignore='.DS_Store' $SUB_COMMAND_NAME
}

sub_dock() {
  . "${DOTFILES_DIR}/macos/dock.zsh" && echo "Dock reloaded."
}

sub_edit() {
  local editor="${EDITOR:-cursor}"
  if [ $SUB_COMMAND_NAME ]; then
    zsh -c "$SUB_COMMAND_NAME $DOTFILES_DIR"
  else
    zsh -c "$editor $DOTFILES_DIR"
  fi
}

sub_clean() {
  echo "$ mo clean"
  mo clean
}

sub_update() {
  echo "$ topgrade"
  topgrade
}

sub_dump() {
  echo "Dumping current Homebrew packages to Brewfile..."
  echo "$ brew bundle dump --file=${DOTFILES_DIR}/install/Brewfile --force"
  brew bundle dump --file="${DOTFILES_DIR}/install/Brewfile" --force
  echo "Done! Brewfile updated at ${DOTFILES_DIR}/install/Brewfile"
}

sub_macos() {
  for DEFAULTS_FILE in "${DOTFILES_DIR}"/macos/defaults*.zsh; do
    echo "Applying ${DEFAULTS_FILE}" && . "${DEFAULTS_FILE}"
  done
  echo "Done. Some changes may require a logout/restart to take effect."
}

sub_start() {
  echo "Starting sketchybar, skhd, yabai"
  echo "$ brew services start sketchybar"
  brew services start sketchybar
  echo "$ skhd --start-service"
  skhd --start-service
  echo "$ yabai --start-service"
  yabai --start-service
}

sub_fix() {
  echo '$ yabai --stop-service'
  yabai --stop-service
  echo '$ skhd --stop-service'
  skhd --stop-service
  echo 'Executing yabai scripting addition fix'
  echo "$(whoami) ALL=(root) NOPASSWD: sha256:$(shasum -a 256 $(which yabai) | cut -d " " -f 1) $(which yabai) --load-sa" | sudo tee /private/etc/sudoers.d/yabai
  dotfiles start
}

# =============================================================================
# Main Command Router
# =============================================================================

case $COMMAND_NAME in
  "" | "-h" | "--help")
    sub_help
    ;;
  *)
    shift
    sub_${COMMAND_NAME} $@
    if [ $? = 127 ]; then
      echo "'$COMMAND_NAME' is not a known command or has errors." >&2
      sub_help
      exit 1
    fi
    ;;
esac
