[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Dean Cureton
	email = 89793485+deancureton@users.noreply.github.com
[github]
	user = deancureton
[core]
	excludesfile = ~/.config/git/.gitignore_global
	editor = nvim
[init]
	defaultBranch = main
[pull]
	rebase = true
[push]
	default = simple
	followTags = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[alias]
	# Common shortcuts
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --

	# Logging
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD

	# Diff shortcuts
	df = diff
	dc = diff --cached

	# Branch management
	branches = branch -a
	tags = tag -l
	remotes = remote -v

	# Undo
	undo = reset --soft HEAD~1
	amend = commit --amend --no-edit
