# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf
*.zsh text eol=lf
*.bash text eol=lf

# Documents
*.md text diff=markdown
*.tex text diff=tex

# Scripts
*.lua text eol=lf
*.py text eol=lf

# Configs
*.json text
*.yaml text
*.yml text
*.toml text

# Git config files
.gitattributes text
.gitconfig text
.gitignore text

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.DS_Store export-ignore
